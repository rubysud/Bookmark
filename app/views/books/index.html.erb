 <div id="a1">
<% @books.each do |book| %>

  <div class="book">
    <div class="row">
      <div class="col-md-1">
        <p class="rank-this-week"> </p>
      </div>
      <div class="col-md-9">
        <p class="title"> <%= book.title %> </p>
        <p class="author"> by <%= book.author %>  </p>
        <p class="publisher"> <%= book.publisher %> </p>
        <p class="description"> <%= book.description %> </p>
        <p class="image"><%= image_tag book.image.url(:thumb)%> </p>
        <%= link_to 'See all Editorial Reviews', book %>
        <% id = book.id %>
        <%= link_to 'Edit Book', edit_book_path(book) %>
        <%= link_to 'AllComments', "/books/#{id}/comments" %>
        <%= link_to 'Comment', "/books/#{id}/new_comment" %>
        
        <%= link_to 'Delete', "/books/#{id}",method: :delete %>

        <!-- <a href="books/#{id}/edit">Edit Book</a> -->
      </div>
      <div class="col-md-2">
        <p class="weeks-on-list"> <%= book.weeks_on_list %></p>
      </div>
    </div>
  </div>
<% end %>
<%= link_to 'New Book', new_book_path %>
<!-- <a href="books/new">New Book</a> -->



</div>
